<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f3e47"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.knitechs.www.medapp.PatientDetails">


   <TableLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:measureWithLargestChild="false"
       android:baselineAligned="false"
       android:layout_centerVertical="true"
       android:layout_alignParentTop="false"
       android:layout_alignParentRight="false"
       android:layout_alignParentEnd="true"
       android:layout_alignParentLeft="false"
       android:layout_alignParentStart="true"
       android:stretchColumns="0"
       android:shrinkColumns="0">
       <TableRow
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_weight="0.5"
           android:gravity="center">
           <ScrollView
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:id="@+id/scrollView"
               android:layout_alignParentBottom="true"
               android:layout_alignParentTop="true">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:layout_marginTop="20dp"
                   android:weightSum="1">



                   <!--patient record code-->
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Patient Record Code"
                       android:id="@+id/lblpatientRecordCode"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:layout_weight="0.03"
                       android:layout_gravity="center"
                       android:textColor="@color/background_material_light"/>

                   <EditText
                       android:layout_width="fill_parent"
                       android:layout_height="50dp"
                       android:inputType="textPersonName"
                       android:ems="10"
                       android:id="@+id/txtPatientRecordCode"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="10dp"
                       android:layout_gravity="center"
                       android:background="@color/background_floating_material_light"
                       android:textColor="@color/background_floating_material_dark"
                       android:layout_weight="0.03"
                       android:textSize="@dimen/abc_text_size_large_material"
                       android:layout_marginBottom="20dp" />

                   <!-- patient name-->
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Full Name"
                       android:id="@+id/lblFullName"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:layout_weight="0.03"
                       android:layout_gravity="center"
                       android:textColor="@color/background_material_light"/>

                   <EditText
                       android:layout_width="fill_parent"
                       android:layout_height="50dp"
                       android:inputType="textPersonName"
                       android:ems="10"
                       android:id="@+id/txtFullName"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="10dp"
                       android:layout_gravity="center"
                       android:background="@color/background_floating_material_light"
                       android:textColor="@color/background_floating_material_dark"
                       android:layout_weight="0.03"
                       android:textSize="@dimen/abc_text_size_large_material"
                       android:layout_marginBottom="20dp" />

                   <!-- Address -->
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Address"
                       android:id="@+id/lblAddress"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:layout_gravity="center"
                       android:layout_weight="0.03"
                       android:textColor="@color/background_material_light"/>

                   <EditText
                       android:layout_width="fill_parent"
                       android:layout_height="50dp"
                       android:inputType="textMultiLine|textPersonName"
                       android:ems="10"
                       android:id="@+id/txtAddress"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="10dp"
                       android:layout_gravity="center"
                       android:background="@color/background_floating_material_light"
                       android:textColor="@color/background_floating_material_dark"
                       android:layout_weight="0.03"
                       android:textSize="@dimen/abc_text_size_large_material"
                       android:layout_marginBottom="20dp" />

                   <!-- Home town -->
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Address"
                       android:id="@+id/lblHometown"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:layout_gravity="center"
                       android:layout_weight="0.03"
                       android:textColor="@color/background_material_light"/>

                   <EditText
                       android:layout_width="fill_parent"
                       android:layout_height="50dp"
                       android:inputType="textMultiLine|textPersonName"
                       android:ems="10"
                       android:id="@+id/txtHomeTown"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="10dp"
                       android:layout_gravity="center"
                       android:background="@color/background_floating_material_light"
                       android:textColor="@color/background_floating_material_dark"
                       android:layout_weight="0.03"
                       android:textSize="@dimen/abc_text_size_large_material"
                       android:layout_marginBottom="20dp" />

                   <!-- Patient Contact Number-->
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Contact Number"
                       android:id="@+id/textView"
                       android:layout_gravity="center"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:layout_weight="0.03"
                       android:textColor="@color/background_material_light"/>

                   <EditText
                       android:layout_width="fill_parent"
                       android:layout_height="50dp"
                       android:inputType="number"
                       android:ems="10"
                       android:maxLength="10"
                       android:id="@+id/txtTelepphoneNumber"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="10dp"
                       android:layout_gravity="center"
                       android:background="@color/background_floating_material_light"
                       android:textColor="@color/background_floating_material_dark"
                       android:layout_weight="0.03"
                       android:textSize="@dimen/abc_text_size_large_material"
                       android:layout_marginBottom="20dp" />



                   <!-- Gender-->
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Gender"
                       android:id="@+id/lblGender"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:layout_gravity="center"
                       android:layout_weight="0.03"
                       android:textColor="@color/background_material_light"/>

                   <Spinner
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="10dp"
                       android:layout_gravity="center"
                       android:background="@color/background_floating_material_light"
                       android:textColor="@color/background_floating_material_dark"
                       android:entries="@array/gender_array"
                       android:prompt="@string/gender_prompt"
                       android:spinnerMode="dropdown"
                       android:id="@+id/spnGender"
                       android:layout_marginBottom="20dp" />
                   <!-- Gardian name-->
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Gardian Name"
                       android:id="@+id/lblGrdianName"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:layout_gravity="center"
                       android:layout_weight="0.03"
                       android:textColor="@color/background_material_light"/>

                   <EditText
                       android:layout_width="fill_parent"
                       android:layout_height="50dp"
                       android:inputType="textPersonName"
                       android:ems="10"
                       android:id="@+id/txtGardianName"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="15dp"
                       android:layout_gravity="center"
                       android:layout_marginRight="10dp"
                       android:background="@color/background_floating_material_light"
                       android:textColor="@color/background_floating_material_dark"
                       android:layout_weight="0.03"
                       android:textSize="@dimen/abc_text_size_large_material"
                       android:layout_marginBottom="20dp" />

                   <!-- Gardian Telephone-->
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Gardian Contact Number"
                       android:id="@+id/lblGardianContact"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:layout_weight="0.03"
                       android:layout_gravity="center"
                       android:textColor="@color/background_material_light"/>

                   <EditText
                       android:layout_width="fill_parent"
                       android:layout_height="50dp"
                       android:inputType="numberDecimal"
                       android:maxLength="10"
                       android:ems="10"
                       android:id="@+id/txtGardianContactNumber"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="10dp"
                       android:layout_gravity="center"
                       android:background="@color/background_floating_material_light"
                       android:textColor="@color/background_floating_material_dark"
                       android:layout_weight="0.03"
                       android:textSize="@dimen/abc_text_size_large_material"
                       android:layout_marginBottom="20dp" />

                   <!-- Date of Birth-->
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Date Of Birth"
                       android:id="@+id/lblDob"
                       android:layout_gravity="center"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:layout_weight="0.03"
                       android:textColor="@color/background_material_light"/>


                   <DatePicker
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:calendarViewShown="false"
                       android:id="@+id/dateDob"
                       android:datePickerMode="spinner"
                       android:background="@color/background_floating_material_light"
                       android:layout_gravity="left"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="30dp"
                       ></DatePicker>

                   <!--save button-->

                   <TableRow
                       android:layout_width="fill_parent"
                       android:layout_height="90dp"
                       android:weightSum="1"
                       android:layout_marginTop="30dp"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="10dp"
                       android:layout_weight="0.22"
                       android:height="50dp">

                       <Button
                           android:layout_width="wrap_content"
                           android:layout_height="80dp"
                           android:text="Save"
                           android:id="@+id/cmd_patient_details_save"
                           android:layout_weight="0.5"
                           android:textSize="@dimen/abc_text_size_large_material"
                           android:gravity="center" />

                       <Button
                           android:layout_width="wrap_content"
                           android:layout_height="80dp"
                           android:text="Cancel"
                           android:id="@+id/cmd_patient_details_cancel"
                           android:layout_weight="0.50"
                           android:textSize="@dimen/abc_text_size_large_material"
                           android:gravity="center" />
                   </TableRow>


               </LinearLayout>
           </ScrollView>
       </TableRow>
       </TableLayout>

</RelativeLayout>
